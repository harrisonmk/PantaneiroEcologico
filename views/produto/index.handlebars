<h2>Produtos:</h2>
<hr>


{{#each produto}}

<div class="card mt-4">

    <div class="card-body">

        <h3>{{titulo}}</h3>
        <p>{{subtitulo}}</p>
        <hr>
        <small>Data de Publicação: {{data}}</small><br>
		<hr>
        <h6>{{texto}}</h6>

        <a href="/produto/{{slug}}"> <button class="btn btn-success">Leia Mais</button> </a>
        <hr>
    </div>

</div>

{{else}}
 <h4 class="mt-3"> Nenhum produto registrado</h4>
{{/each}}
