<head>
    <link rel="stylesheet" href="../css/tutoriais.css">
</head>
<style>
    .doze {
        max-width: 100%;
        width: 250px;
        height: 250px;
        object-fit: cover;
    }

    .um {
        max-width: 100%;
        width: 250px;
        height: 250px;
        object-fit: cover;
    }
</style>
<h2>Tutoriais</h2>
<br>
{{#each tutorial}}

<div class="card mb-2"  style="max-width: 80rem;">
    <div class="card-header">
        <h4 class="text-center">{{titulo}}</h4>
        <div class="subtitulo">{{subtitulo}}</div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                {{#if imagem}}
                <a href="/homeTutorial/{{_id}}">
                <img class="doze " src="../uploadTutorial{{imagem}}"></a>
                {{/if}}
            </div>
            <div class="col-6">
                <p align="justify" class="texto-tutorial" class="ponto-coleta-texto">{{texto}}<small>
            </div>
        </div>
        <div class="row">
            <div class="col-6"></div>
            <div class="col-6 text-center">
                <a href="/homeTutorial/{{_id}}"><button class="btn btn-lg btn-success justify-content-xl-end">
                    Ver mais
                </button></a>
            </div>
        </div>
    </div>
    <div class="card-footer text-muted">
        <blockquote class="blockquote mb-0">
            <footer class="autor" class="blockquote-footer">Autor: {{autor}}</footer>
        </blockquote>
        <div class="data" class="d-flex justify-content-end">Data de Publicação: {{data}}</div>
    </div>
</div>

{{else}}
<h4 class="mt-3"> Sem registro de nenhum tutorial</h4>
{{/each}}