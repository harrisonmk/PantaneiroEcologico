<div class="card">

    <div class="card-body">

        <h4>Novo Produto</h4>

          <form action="/produto/nova" method="POST" enctype="multipart/form-data">
        

            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" class="form-control" required='true'>


            <label for="subtitulo">Subt√≠tulo</label>
            <input type="text" name="subtitulo" class="form-control" required>

            <label for="texto">Texto</label>
