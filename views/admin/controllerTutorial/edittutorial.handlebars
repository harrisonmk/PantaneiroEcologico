{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Editar Tutorial</h3>
<hr>
<center>
    <div class="container">
        <div class="card w-75">
            <div class="card-body">
                <form action="/admin/tutoriais/edit" method="POST">
                <input type="hidden" value="{{tutorial._id}}" name="id">
                    <div class="form-group row">
                        <div class="col-2">
                            <label for="titulo">Titulo: </label>
                        </div>
                        <div class="col-sm-10">
                            <input type="text" name="titulo" class="form-control" value="{{tutorial.titulo}}" required>
                        </div>
                    </div>
                    <br>
                    <div class="form-group row">
                        <div class="col-2">
                            <label for="subtitulo">Subt√≠tulo: </label>
                        </div>
                        <div class="col-sm-10">
                            <input type="text" name="subtitulo" class="form-control" value="{{tutorial.subtitulo}}" required>
                        </div>
                    </div>
                    <br>
                    <div class="form-group row">
                        <div class="col-2">
                            <label for="texto">Assunto:</label>
                        </div>
                        <div class="col-sm-10">
                            <textarea type="text" name="texto" class="form-control" rows="3">{{tutorial.texto}}</textarea>
                        </div>
                    </div>
                    <br>
                    <div class="form-group row">
                        <div class="col-2">
                            <label for="autor">Autor: </label>
                        </div>
                        <div class="col-sm-10">
                            <input name="autor" class="form-control" value="{{tutorial.autor}}">
                        </div>
                    </div>
                    <br>
                    <button class="btn btn-lg btn-success mt-2" type="submit">Editar </button>
                </form>
            </div>
        </div>
    </div>
</center>