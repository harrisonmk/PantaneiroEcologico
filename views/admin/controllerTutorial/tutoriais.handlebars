<head>
    <link rel="stylesheet" href="../css/tutoriais.css">
</head>
<style>
    .doze {
        max-width: 100%;
        width: 250px;
        height: 250px;
        object-fit: cover;
    }

    .um {
        max-width: 100%;
        width: 250px;
        height: 250px;
        object-fit: cover;
    }
</style>
<div class="container-fluid">
    <h2>Lista dos Tutoriais:</h2>
    <hr>
    <div  class="d-flex justify-content-end">
        <a href="/admin/tutoriais/add" <button class="btn btn-lg btn-success">Novo Tutorial</button> </a>
    </div>
    <br>
    {{#each tutorial}}
        <div class="card" style="width: 400;">
            <div class="card-header">
                <div  class="d-flex justify-content-end">
                    <form action="tutoriais/deletar" method="POST">
                        <input type="hidden" name="id" value="{{_id}}">
                        <button type="submit" class="btn btn-lg btn-danger mt-2">Deletar</button>
                    </form>
                </div>
                <b><h4 class="text-center">Título: {{titulo}}</h4></b>
                <div class="subtitulo">Subtítulo: {{subtitulo}}</div>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-5 text-center">
                        <img class="doze " src="../uploadTutorial{{imagem}}">
                    </div>
                    <div class="col-7 ">
                        <p class="texto-tutorial">{{texto}}</p>
                    </div>
                </div>
                <div class="row ">
                    <div class="col-6 text-center">
                        <video width="320" height="200" controls class="um">
                            <source src="../uploadTutorial{{video}}" type="video/MP4">
                        </video>
                    </div>
                    <div class="col-6 justify-content-center">
                        <audio controls>
                            <source src="../uploadTutorial{{audio}}" type="audio/mpeg">
                        </audio>
                    </div>
                </div>
                
                
            </div>
            <div class="card-footer text-muted">
                <blockquote class="blockquote mb-0">
                    <footer class="autor" class="blockquote-footer">Autor: {{autor}}</footer>
                </blockquote>
                <div class="data" class="d-flex justify-content-end">Data de Publicação: {{data}}</div>
                    <a href="/admin/tutoriais/edit/{{_id}}"><button class="btn btn-lg btn-warning mt-4">Editar</button></a>
                </div>
            </div>
            <br>
        {{else}}
            <h4 class="mt-3"> Nenhum Tutorial Registrado</h4>
    {{/each}}
</div>