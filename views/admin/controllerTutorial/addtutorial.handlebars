{{#each erros}}

<div class="alert alert-danger">{{texto}}</div>

{{else}}

{{/each}}

<h3>Tutorial</h3>
<hr>
<center>
    <div class="container">
        <div class="card w-75">
            <div class="card-body">
                <form action="/tutoriais/nova" method="POST" enctype="multipart/form-data">
                    <div class="form-group row">
                        <div class="col-2">
                            <label for="titulo">Titulo: </label>
                        </div>
                        <div class="col-sm-10">
                            <input type="text" id="titulo" name="titulo" placeholder="Digite o Titulo"
                                class="form-control">
                        </div>
                    </div>
                    <br>
                    <div class="form-group row">
                        <div class="col-2">
                            <label for="subtitulo">Subtítulo: </label>
                        </div>
                        <div class="col-sm-10">
                            <input type="text" id="subtitulo" name="subtitulo" placeholder="Subtitulo do tutorial"
                                class="form-control">
                        </div>
                    </div>
                    <br>
                    <div class="form-group row">
                        <div class="col-2">
                            <label for="texto">Assunto:</label>
                        </div>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="texto" name="texto" placeholder="Assunto do tutorial"
                                rows="3"></textarea>
                        </div>
                    </div>
                    <br>
                    <div class="form-group row">
                        <div class="col-2">
                            <label for="autor">Autor: </label>
                        </div>

                        <div class="col-sm-10">
                            <input type="text" id="autor" name="autor" placeholder="autor do tutorial"
                                class="form-control">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-2">
                            <label for="imagem">Imagem: </label>
                        </div>
                        <div class="col-sm-10">
                            <input type="file" name="imagem" class="form-control-file">
                        </div>
                    </div>
                    <br>
                    <div class="form-group row">
                        <div class="col-2">
                            <label for="video">Vídeo: </label>
                        </div>
                        <div class="col-sm-10">
                            <input type="file" name="video" class="form-control-file">
                        </div>
                    </div>
                    <br>
                    <div class="form-group row">
                        <div class="col-2">
                            <label for="audio">Aúdio: </label>
                        </div>
                        <div class="col-sm-10">
                            <input type="file" name="audio" class="form-control-file">
                        </div>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-success"> Tutorial</button>
                </form>
            </div>
        </div>
    </div>
</center>