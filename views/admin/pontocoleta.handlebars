<h2>Lista de Pontos de Coleta:</h2>
<hr>
<a href="/admin/pontocoleta/add" <button class="btn btn-success">Novo Ponto Coleta</button> </a>

{{#each pontocoleta}}

<div class="card mt-4">

    <div class="card-body">

        <h4>{{nome}}</h4>
        <small>Bairro: {{bairro}}</small><br>
        <small>Rua: {{rua}}</small><br>
        <small>Numero: {{numero}}</small><br>
        <small>Data: {{data}}</small><br>
        <small>Materiais: {{itens}}</small><br>

        <a href="/admin/ponto-coleta/edit/{{_id}}"><button class="btn btn-success mt-4">Editar Ponto Coleta</button></a>

        <form action="/admin/ponto-coleta/deletar" method="POST">

            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar Ponto de coleta</button>

        

        </form> 

    </div>


</div>

{{else}}
 <h4 class="mt-3"> Nenhuma Categoria Registrada</h4>
{{/each}}