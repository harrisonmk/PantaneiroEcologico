<h2>Lista de Produtos:</h2>
<hr>
<a href="/admin/produto/add" <button class="btn btn-success">Novo Produto</button> </a>

{{#each produto}}

<div class="card mt-4">

    <div class="card-body">


        <h3>{{titulo}}</h3>
		<h4>{{subtitulo}}</h4>
        <small>Data: {{data}}</small><br>


		<h6>{{texto}}</h6>

        <a href="/admin/produto/edit/{{_id}}"><button class="btn btn-success mt-4">Editar Produto</button></a>

        <form action="/admin/produto/deletar" method="POST">

            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar Produto</button>

        </form> 

    </div>


</div>

{{else}}
 <h4 class="mt-3"> Nenhum Produto Registrado</h4>
{{/each}}